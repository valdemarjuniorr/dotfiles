export AWS_DEFAULT_REGION=us-east-1
export AWS_PROFILE=olist-cluster # pode usar o nome que lhe for conveniente, ficar√° em suas credentials
export GOOGLE_USERNAME=valdemar.barros@olist.com
export OLIST_TEAM=su-channels


